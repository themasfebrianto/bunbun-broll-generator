    <script src="_framework/blazor.web.js" autostart="false"></script>
    <script>
        // Custom Blazor connection handling - no loading spinner on disconnect
        Blazor.start({
            reconnectionOptions: {
                maxRetries: 5,
                retryIntervalMilliseconds: 2000
            }
        }).catch(err => {
            // Server not available - don't show spinner, just fail silently
            console.warn('Blazor connection failed:', err);
        });

        // Override the default reconnection UI
        Blazor.defaultReconnectionHandler._reconnectionDisplay = {
            show: () => {}, // Do nothing on show
            hide: () => {}, // Do nothing on hide
            failed: () => {
                // Optionally show a minimal message on complete failure
                console.log('Connection to server lost.');
            },
            update: (currentAttempt) => {
                console.log(`Reconnection attempt ${currentAttempt}...`);
            }
        };
    </script>
