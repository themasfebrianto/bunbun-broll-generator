@inject NavigationManager NavigationManager

<nav aria-label="Progress">
    <ol role="list" class="flex items-center">
        @foreach (var step in Steps)
        {
            <li class="relative pr-8 sm:pr-20">
                @if (IsCompleted(step.Id))
                {
                    <div class="absolute inset-0 flex items-center" aria-hidden="true">
                        <div class="h-0.5 w-full bg-primary"></div>
                    </div>
                    <a href="@GetUrl(step.Id)" class="relative flex h-8 w-8 items-center justify-center rounded-full bg-primary hover:bg-primary/90 transition-colors">
                        <svg class="h-5 w-5 text-primary-foreground" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                            <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
                        </svg>
                        <span class="absolute -bottom-6 text-xs font-medium text-primary whitespace-nowrap">@step.Name</span>
                    </a>
                }
                else if (step.Id == CurrentStage)
                {
                    <div class="absolute inset-0 flex items-center" aria-hidden="true">
                        <div class="h-0.5 w-full bg-muted"></div>
                    </div>
                    <a href="#" class="relative flex h-8 w-8 items-center justify-center rounded-full border-2 border-primary bg-background" aria-current="step">
                        <span class="h-2.5 w-2.5 rounded-full bg-primary" aria-hidden="true"></span>
                        <span class="absolute -bottom-6 text-xs font-medium text-primary whitespace-nowrap">@step.Name</span>
                    </a>
                }
                else
                {
                    <div class="absolute inset-0 flex items-center" aria-hidden="true">
                        <div class="h-0.5 w-full bg-muted"></div>
                    </div>
                    <a href="@GetUrl(step.Id)" class="group relative flex h-8 w-8 items-center justify-center rounded-full border-2 border-muted bg-background hover:border-muted-foreground transition-colors">
                        <span class="h-2.5 w-2.5 rounded-full bg-transparent group-hover:bg-muted-foreground transition-colors" aria-hidden="true"></span>
                        <span class="absolute -bottom-6 text-xs font-medium text-muted-foreground whitespace-nowrap">@step.Name</span>
                    </a>
                }
            </li>
        }
    </ol>
</nav>

@code {
    [Parameter] public string ProjectId { get; set; } = string.Empty;
    [Parameter] public string CurrentStage { get; set; } = "script";

    private List<StepDefinition> Steps = new()
    {
        new StepDefinition("script", "Script"),
        new StepDefinition("visuals", "Visuals"),
        new StepDefinition("audio", "Audio"),
        new StepDefinition("assembly", "Assembly")
    };

    private bool IsCompleted(string stepId)
    {
        var currentIndex = Steps.FindIndex(s => s.Id == CurrentStage);
        var selfIndex = Steps.FindIndex(s => s.Id == stepId);
        
        // This is a visual heuristic. Real app might check DB if actually completed.
        return selfIndex < currentIndex;
    }

    private string GetUrl(string stepId)
    {
        return $"/workspace/{ProjectId}/{stepId}";
    }

    private record StepDefinition(string Id, string Name);
}
