@namespace BunbunBroll.Components.Views.ScriptGenerator

<Modal IsVisible="IsVisible"
       Title="@Title"
       Size="sm"
       ShowCloseButton="false"
       OnClose="OnCancel">
    <ChildContent>
        <p class="text-sm text-muted-foreground">@Message</p>
    </ChildContent>
    <FooterContent>
        <button class="btn-ghost text-sm px-4" @onclick="OnCancel">Batal</button>
        <button class="px-4 py-2 bg-destructive text-destructive-foreground hover:bg-destructive/90 rounded-md text-sm font-medium transition-colors"
                @onclick="OnConfirm">
            Ya, Lanjutkan
        </button>
    </FooterContent>
</Modal>

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Message { get; set; } = "";
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback OnConfirm { get; set; }
}
