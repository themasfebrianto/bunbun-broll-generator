@namespace BunbunBroll.Components.Views.ScriptGenerator
@using BunbunBroll.Models
@using BunbunBroll.Components.Common

<Card>
    <div class="space-y-6">
        <div class="space-y-2">
            <div class="flex items-center justify-between">
                <h2 class="text-lg font-semibold">Generating: @Topic</h2>
                <div class="flex items-center gap-2">
                    <Badge Variant="mono">@SessionId</Badge>
                    @if (CanCancel)
                    {
                        <button class="px-3 py-1.5 bg-destructive/15 text-destructive hover:bg-destructive/25 rounded-md text-xs font-medium transition-colors flex items-center gap-1.5"
                                @onclick="OnCancel">
                            <Icon Name="x" Size="14" />
                            Batalkan
                        </button>
                    }
                </div>
            </div>
            <p class="text-sm text-muted-foreground">@ProgressMessage</p>
            
            @if (!string.IsNullOrWhiteSpace(Outline))
            {
                <details class="group bg-muted/40 rounded-lg overflow-hidden border border-border/50">
                    <summary class="flex items-center gap-2 px-4 py-2.5 cursor-pointer hover:bg-muted/60 transition-colors select-none">
                        <span class="p-1 rounded-md bg-primary/10 text-primary">
                            <Icon Name="list" Size="16" />
                        </span>
                        <span class="text-xs font-semibold uppercase tracking-wider text-muted-foreground flex-1">Script Outline</span>
                        <Icon Name="chevron-down" Size="16" Class="text-muted-foreground group-open:rotate-180 transition-transform" />
                    </summary>
                    <div class="px-4 pb-4 pt-1">
                        <div class="text-sm text-foreground/80 whitespace-pre-wrap leading-relaxed pl-8 border-l-2 border-primary/20">@Outline</div>
                    </div>
                </details>
            }
        </div>
        
        <!-- Progress Bar -->
        <div class="space-y-2">
            <div class="h-2 rounded-full bg-muted overflow-hidden">
                <div class="h-full bg-primary rounded-full transition-all duration-500" style="width: @ProgressPercent%"></div>
            </div>
            <p class="text-xs text-muted-foreground text-right">@CompletedPhases / @TotalPhases fase</p>
        </div>
        
        <!-- Phase Statuses -->
        <div class="space-y-3">
            @foreach (var phase in PhaseStatuses)
            {
                <div class="flex items-center gap-3 text-sm">
                    @GetStatusIcon(phase.Status)
                    <span class="@GetStatusTextClass(phase.Status)">@phase.Name</span>
                    <div class="ml-auto flex items-center gap-2">
                        @if (!string.IsNullOrEmpty(phase.DurationTarget))
                        {
                            <span class="text-xs text-primary/80 font-mono bg-primary/5 px-2 py-0.5 rounded">Target: @phase.DurationTarget</span>
                        }
                        @if (phase.WordCount > 0)
                        {
                            <span class="text-xs text-muted-foreground">| @phase.WordCount kata</span>
                        }
                    </div>
                </div>
                @if (phase.OutlinePoints?.Count > 0)
                {
                    <div class="ml-8 mt-1 mb-1 pl-3 border-l-2 border-primary/20">
                        @foreach (var point in phase.OutlinePoints)
                        {
                            <p class="text-xs text-muted-foreground leading-relaxed">• @point</p>
                        }
                    </div>
                }
            }
        </div>
        
        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="rounded-lg border border-destructive/30 bg-destructive/10 p-3 text-destructive text-sm">@ErrorMessage</div>
        }
    </div>
</Card>

@code {
    [Parameter] public string Topic { get; set; } = "";
    [Parameter] public string? SessionId { get; set; }
    [Parameter] public string? ProgressMessage { get; set; }
    [Parameter] public string? Outline { get; set; }
    [Parameter] public int ProgressPercent { get; set; }
    [Parameter] public int CompletedPhases { get; set; }
    [Parameter] public int TotalPhases { get; set; }
    [Parameter] public List<PhaseStatusInfo> PhaseStatuses { get; set; } = new();
    [Parameter] public string? ErrorMessage { get; set; }
    [Parameter] public bool CanCancel { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private static RenderFragment GetStatusIcon(string status) => status switch
    {
        "Completed" => @<span class="text-success text-lg">✓</span>,
        "InProgress" => @<Icon Name="spinner" Size="16" Class="animate-spin text-primary" />,
        "Failed" => @<span class="text-destructive text-lg">✗</span>,
        _ => @<span class="text-muted-foreground text-lg">○</span>
    };

    private static string GetStatusTextClass(string status) => status switch
    {
        "InProgress" => "text-foreground font-medium",
        "Completed" => "text-muted-foreground",
        _ => "text-muted-foreground/60"
    };

    public class PhaseStatusInfo
    {
        public string Name { get; set; } = "";
        public string Status { get; set; } = "";
        public string? DurationTarget { get; set; }
        public int WordCount { get; set; }
        public List<string>? OutlinePoints { get; set; }
    }
}
