@namespace BunbunBroll.Components.Views.ScriptGenerator
@using BunbunBroll.Models
@using BunbunBroll.Services
@inject VideoStyleSettings StyleSettings

<div class="space-y-6">
    @* Header Card *@
    <div class="card p-6">
        <div class="flex items-start justify-between gap-4 mb-4">
            <div class="space-y-1 min-w-0">
                <h2 class="text-xl font-bold truncate">B-Roll Prompts: @Session?.Topic</h2>
                <div class="flex items-center gap-2 text-xs text-muted-foreground flex-wrap">
                    <span class="badge badge-mono text-[10px]">@SessionId</span>
                    <span>¬∑</span>
                    <span>@TotalWords kata</span>
                    <span>¬∑</span>
                    <span>~@TotalMinutes menit</span>
                    <span>¬∑</span>
                    <span>@TotalPhases fase</span>
                    @if (PromptItems.Count > 0 && !IsClassifying)
                    {
                        <span>¬∑</span>
                        <span>@PromptItems.Count segments</span>
                        <span>¬∑</span>
                        <span class="px-2 py-0.5 rounded-full bg-blue-500/15 text-blue-400 text-[11px] font-semibold">üé¨ @PromptItems.Count(i => i.MediaType == BrollMediaType.BrollVideo) broll</span>
                        <span class="px-2 py-0.5 rounded-full bg-purple-500/15 text-purple-400 text-[11px] font-semibold">üé® @PromptItems.Count(i => i.MediaType == BrollMediaType.ImageGeneration) image gen</span>
                    }
                </div>
            </div>
        </div>

        @* === Redesigned Action Toolbar === *@
        @if (!string.IsNullOrEmpty(WarningMessage))
        {
            <div class="mb-4 rounded-lg border border-orange-500/30 bg-orange-500/10 p-4 text-orange-400 text-sm shadow-sm flex items-start gap-3">
                <svg class="h-5 w-5 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/></svg>
                <div>
                    <h4 class="font-bold mb-1">Peringatan: Project Lama Terdeteksi</h4>
                    <p>@WarningMessage</p>
                </div>
            </div>
        }

        <div class="space-y-4">
            @* Row 1: Navigation & Global Settings *@
            <div class="flex flex-wrap items-center justify-between gap-3 bg-card/50 backdrop-blur-sm p-2 rounded-xl border border-border/40 shadow-sm">
                <div class="flex items-center gap-1.5 pl-1">
                    <button class="btn-ghost hover:bg-muted/80 text-xs flex items-center gap-1.5 h-8 px-3 rounded-lg transition-all" @onclick="OnBackToResults">
                        <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>
                        <span class="font-medium">Kembali</span>
                    </button>
                    <div class="h-4 w-px bg-border mx-1"></div>
                    <button class="btn-ghost text-xs flex items-center gap-1.5 h-8 px-3 rounded-lg @(StyleSettings.VignetteEnabled ? "text-primary bg-primary/10 hover:bg-primary/20" : "text-muted-foreground hover:bg-muted/80") transition-all"
                            @onclick="ToggleVignette" title="Toggle vignette effect on images">
                        <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <circle cx="12" cy="12" r="10" stroke-width="2"/>
                            <circle cx="12" cy="12" r="6" stroke-width="2" class="opacity-50"/>
                        </svg>
                        <span class="font-medium">Vignette @(StyleSettings.VignetteEnabled ? "ON" : "OFF")</span>
                    </button>
                </div>

                <div class="flex items-center gap-2 pr-1">
                    <button class="text-xs flex items-center gap-1.5 h-8 px-3 rounded-lg transition-all
                                   @(IsClassifying ? "bg-orange-500/10 text-orange-400 cursor-not-allowed" : "text-orange-500 hover:text-orange-400 hover:bg-orange-500/10 border border-transparent hover:border-orange-500/20 active:scale-95")"
                            disabled="@IsClassifying" @onclick="OnReclassify" title="Klasifikasi ulang semua segment">
                        @if (IsClassifying)
                        {
                            <svg class="animate-spin h-3.5 w-3.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>
                        }
                        else
                        {
                            <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>
                        }
                        <span class="hidden sm:inline font-medium">Re-Classify</span>
                    </button>
                    
                    <div class="h-4 w-px bg-border mx-1"></div>
                    
                    <button class="text-xs flex items-center gap-1.5 h-8 px-3 rounded-lg transition-all duration-200 active:scale-95 shadow-sm
                                   @(IsMergingVideo ? "bg-blue-600/50 text-white/70 cursor-not-allowed" : "bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-500 hover:to-indigo-500 text-white hover:shadow-blue-500/25 blur-0")"
                            disabled="@IsMergingVideo" @onclick="OnMergePreview" title="Quick merge (low res / draft)">
                        @if (IsMergingVideo)
                        {
                            <svg class="animate-spin h-3.5 w-3.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>
                        }
                        else
                        {
                            <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                        }
                        <span class="hidden sm:inline font-medium filter drop-shadow">Merge Preview</span>
                    </button>
                    
                    <button class="text-xs flex items-center gap-1.5 h-8 px-3 rounded-lg transition-all duration-200 active:scale-95 shadow-sm
                                   @(IsMergingVideo ? "bg-emerald-600/50 text-white/70 cursor-not-allowed" : "bg-gradient-to-r from-emerald-600 to-teal-600 hover:from-emerald-500 hover:to-teal-500 text-white hover:shadow-emerald-500/25")"
                            disabled="@IsMergingVideo" @onclick="OnMergeReal" title="Merge the final video (high quality)">
                        <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                        <span class="hidden sm:inline font-medium filter drop-shadow">Merge Final</span>
                    </button>
                </div>
            </div>

            @if (IsMergingVideo || !string.IsNullOrEmpty(MergeProgress) || !string.IsNullOrEmpty(MergedVideoPath))
            {
                <div class="bg-muted/20 p-3 rounded-lg border border-border/50">
                    <div class="flex items-center justify-between">
                        <div class="text-sm">
                            <span class="font-medium text-foreground">Video Composition Progress:</span> 
                            <span class="text-muted-foreground ml-2">@(MergeProgress ?? "Preparing...")</span>
                        </div>
                        @if (!string.IsNullOrEmpty(MergedVideoPath) && !IsMergingVideo)
                        {
                            <a href="@GetAssetUrl(MergedVideoPath)" target="_blank" class="btn-primary text-xs h-8 px-3 flex items-center gap-1.5">
                                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/></svg>
                                Download / View
                            </a>
                        }
                    </div>
                </div>
            }

            @* Row 2: Unified Grid for Generation Operations *@
            @if (!IsClassifying && PromptItems.Count > 0)
            {
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    
                    @* Column 1: Video B-Roll *@
                    @if (PromptItems.Any(i => i.MediaType == BrollMediaType.BrollVideo))
                    {
                        var brollCount = PromptItems.Count(i => i.MediaType == BrollMediaType.BrollVideo);
                        <div class="flex flex-col p-4 rounded-xl border border-blue-500/20 bg-card/80 shadow-sm hover:border-blue-500/40 transition-colors">
                            @* Header *@
                            <div class="flex items-center justify-between mb-4">
                                <div class="flex items-center gap-2.5">
                                    <div class="h-7 w-7 rounded-lg flex items-center justify-center bg-gradient-to-br from-blue-500 to-cyan-500 text-white shadow-sm shadow-blue-500/20">
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/></svg>
                                    </div>
                                    <span class="font-bold text-sm tracking-wide text-foreground">Video B-Roll</span>
                                </div>
                                <span class="text-[11px] font-bold bg-blue-500/10 text-blue-400 px-2 py-0.5 rounded-full border border-blue-500/20">@brollCount Segments</span>
                            </div>

                            @* Standardized Button Layout (Equal height & filling behavior) *@
                            <div class="flex flex-col gap-2.5 mt-auto">
                                <div class="grid grid-cols-2 gap-2.5">
                                    <button class="h-9 w-full flex justify-center items-center gap-2 rounded-lg text-xs font-medium transition-all duration-200 active:scale-95 border
                                                   @(IsRegeneratingAllKeywords ? "bg-muted text-muted-foreground border-border cursor-not-allowed" : "bg-card text-foreground hover:bg-blue-500/5 border-border hover:border-blue-500/30 hover:text-blue-400")"
                                            disabled="@IsRegeneratingAllKeywords" @onclick="OnRegenAllVideoKeywords">
                                        @if (IsRegeneratingAllKeywords)
                                        {
                                            <svg class="animate-spin h-3.5 w-3.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>
                                        }
                                        else
                                        {
                                            <svg class="h-3.5 w-3.5 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>
                                        }
                                        <span>Gen Keywords</span>
                                    </button>
                                    
                                    <button class="h-9 w-full flex justify-center items-center gap-2 rounded-lg text-xs font-medium transition-all duration-200 active:scale-95 border
                                                   @(IsSearchingBroll ? "bg-muted text-muted-foreground border-border cursor-not-allowed" : "bg-gradient-to-r from-blue-600 to-blue-500 hover:from-blue-500 hover:to-blue-400 text-white border-transparent shadow-sm hover:shadow-blue-500/25")"
                                            disabled="@IsSearchingBroll" @onclick="OnSearchAllVideos">
                                        @if (IsSearchingBroll)
                                        {
                                            <svg class="animate-spin h-3.5 w-3.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>
                                        }
                                        else
                                        {
                                            <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                                        }
                                        <span>Search Assets</span>
                                    </button>
                                </div>
                                
                                <button class="h-9 w-full flex justify-center items-center gap-2 rounded-lg text-xs font-medium transition-all duration-200 active:scale-95 border
                                               @(IsDownloadingAllVideos ? "bg-muted text-muted-foreground border-border cursor-not-allowed" : "bg-card text-foreground hover:bg-blue-500/5 border-border hover:border-blue-500/30 hover:text-blue-400")"
                                        disabled="@IsDownloadingAllVideos" @onclick="OnDownloadAllVideos">
                                    @if (IsDownloadingAllVideos)
                                    {
                                        <svg class="animate-spin h-3.5 w-3.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>
                                        <span>Downloading videos...</span>
                                    }
                                    else
                                    {
                                        <svg class="h-3.5 w-3.5 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/></svg>
                                        <span>Download All Selections</span>
                                    }
                                </button>
                            </div>
                        </div>
                    }

                    @* Column 2: AI Media & Image Gen *@
                    @if (PromptItems.Any(i => i.MediaType == BrollMediaType.ImageGeneration))
                    {
                        var imageSegCount = PromptItems.Count(i => i.MediaType == BrollMediaType.ImageGeneration);
                        var imageNoPrompt = PromptItems.Count(i => i.MediaType == BrollMediaType.ImageGeneration && string.IsNullOrEmpty(i.Prompt));
                        var missingImageCount = PromptItems.Count(i => i.MediaType == BrollMediaType.ImageGeneration && (i.WhiskStatus != WhiskGenerationStatus.Done || string.IsNullOrEmpty(i.WhiskImagePath) || !System.IO.File.Exists(i.WhiskImagePath)));
                        var pendingVideoCount = PromptItems.Count(i => i.MediaType == BrollMediaType.ImageGeneration && i.WhiskStatus == WhiskGenerationStatus.Done && i.WhiskVideoStatus != WhiskGenerationStatus.Done);
                        var isConverting = PromptItems.Any(i => i.IsConvertingVideo);
                        var doneVideoCount = PromptItems.Count(i => i.MediaType == BrollMediaType.ImageGeneration && i.WhiskVideoStatus == WhiskGenerationStatus.Done);

                        <div class="flex flex-col p-4 rounded-xl border border-purple-500/20 bg-card/80 shadow-sm hover:border-purple-500/40 transition-colors">
                            @* Header *@
                            <div class="flex items-center justify-between mb-4">
                                <div class="flex items-center gap-2.5">
                                    <div class="h-7 w-7 rounded-lg flex items-center justify-center bg-gradient-to-br from-purple-500 to-fuchsia-500 text-white shadow-sm shadow-purple-500/20">
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
                                    </div>
                                    <span class="font-bold text-sm tracking-wide text-foreground">AI Generation</span>
                                </div>
                                <div class="flex flex-wrapjustify-end items-center gap-1.5">
                                    @if(doneVideoCount > 0)
                                    {
                                        <button class="text-[10px] h-6 flex items-center justify-center font-medium bg-red-500/5 hover:bg-red-500/15 border border-red-500/20 text-red-400 px-2 rounded-md transition-colors" 
                                                @onclick="OnResetAllVideoStates" title="Hapus Video B-Roll FX">Hapus FX</button>
                                    }
                                    <button class="text-[10px] h-6 flex items-center justify-center font-medium bg-red-500/5 hover:bg-red-500/15 border border-red-500/20 text-red-400 px-2 rounded-md transition-colors" 
                                            @onclick="OnResetAllImageStates" title="Hard Reset AI Media">Reset</button>
                                    <button class="text-[10px] h-6 flex items-center justify-center font-medium bg-muted hover:bg-muted/80 border border-border text-muted-foreground px-2 rounded-md transition-colors" 
                                            @onclick="OnClearAllPrompts" title="Hapus semua prompt text">Clear Prompts</button>
                                    <span class="text-[11px] font-bold bg-purple-500/10 text-purple-400 px-2 h-6 flex items-center justify-center rounded-md border border-purple-500/20 ml-1">@imageSegCount</span>
                                </div>
                            </div>

                            @* Standardized Button Layout *@
                            <div class="flex flex-col gap-2.5 mt-auto">
                                
                                @* Prompting Sub-group *@
                                <div class="grid grid-cols-2 gap-2.5">
                                    <button class="h-9 w-full flex justify-center items-center gap-2 rounded-lg text-xs font-medium transition-all duration-200 active:scale-95 border relative
                                                   @(IsGeneratingImagePrompts ? "bg-muted text-muted-foreground border-border cursor-not-allowed" : "bg-gradient-to-r from-purple-600 to-purple-500 hover:from-purple-500 hover:to-purple-400 text-white border-transparent shadow-sm hover:shadow-purple-500/25")"
                                            disabled="@IsGeneratingImagePrompts" @onclick="OnGenerateImagePrompts">
                                        @if (IsGeneratingImagePrompts)
                                        {
                                            <svg class="animate-spin h-3.5 w-3.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>
                                            <span>@ImagePromptGeneratedCount / @ImagePromptTotalCount</span>
                                        }
                                        else
                                        {
                                            <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
                                            <span>Write Prompts</span>
                                        }
                                        @if (IsGeneratingImagePrompts && ImagePromptTotalCount > 0)
                                        {
                                            <div class="absolute bottom-0 left-0 h-0.5 bg-white/40" style="width: @((int)((double)ImagePromptGeneratedCount / ImagePromptTotalCount * 100))%"></div>
                                        }
                                    </button>
                                    
                                    <button class="h-9 w-full flex justify-center items-center gap-2 rounded-lg text-xs font-medium transition-all duration-200 active:scale-95 border
                                                   @(imageNoPrompt == 0 || IsGeneratingImagePrompts ? "bg-muted text-muted-foreground border-border cursor-not-allowed opacity-60" : "bg-card text-foreground hover:bg-purple-500/5 border-border hover:border-purple-500/30 hover:text-purple-400")"
                                            disabled="@(imageNoPrompt == 0 || IsGeneratingImagePrompts)" @onclick="OnResumeImagePrompts">
                                        <svg class="h-3.5 w-3.5 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                                        <span>Resume (@imageNoPrompt left)</span>
                                    </button>
                                </div>

                                @* Rendering Sub-group *@
                                <div class="grid grid-cols-2 gap-2.5">
                                    <button class="h-9 w-full flex justify-center items-center gap-2 rounded-lg text-xs font-medium transition-all duration-200 active:scale-95 border
                                                   @(IsGeneratingWhisk || missingImageCount == 0 ? "bg-muted text-muted-foreground border-border cursor-not-allowed opacity-60" : "bg-card text-foreground border-purple-500/20 hover:border-purple-500/40 hover:bg-purple-500/5 text-purple-400")"
                                            disabled="@(IsGeneratingWhisk || missingImageCount == 0)" @onclick="OnGenerateAllWhiskImages">
                                        @if (IsGeneratingWhisk)
                                        {
                                            <svg class="animate-spin h-3.5 w-3.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>
                                            <span>@WhiskGeneratedCount / @WhiskTotalCount</span>
                                        }
                                        else
                                        {
                                            <svg class="h-3.5 w-3.5 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
                                            <span>@(missingImageCount > 0 ? $"Gen {missingImageCount} Images" : "All Rendered")</span>
                                        }
                                    </button>
                                    
                                    <button class="h-9 w-full flex justify-center items-center gap-2 rounded-lg text-xs font-medium transition-all duration-200 active:scale-95 border
                                                   @(isConverting || pendingVideoCount == 0 ? "bg-muted text-muted-foreground border-border cursor-not-allowed opacity-60" : "bg-card text-foreground border-purple-500/20 hover:border-purple-500/40 hover:bg-purple-500/5 text-purple-400")"
                                            disabled="@(isConverting || pendingVideoCount == 0)" @onclick="OnGenerateAllKenBurnsVideos">
                                        @if (isConverting)
                                        {
