@namespace BunbunBroll.Components.Views.ScriptGenerator
@using BunbunBroll.Models
@using BunbunBroll.Services
@inject VideoStyleSettings StyleSettings

<div class="space-y-6">
    @* Header Card *@
    <div class="card p-6">
        <div class="flex items-start justify-between gap-4 mb-4">
            <div class="space-y-1 min-w-0">
                <h2 class="text-xl font-bold truncate">B-Roll Prompts: @Session?.Topic</h2>
                <div class="flex items-center gap-2 text-xs text-muted-foreground flex-wrap">
                    <span class="badge badge-mono text-[10px]">@SessionId</span>
                    <span>¬∑</span>
                    <span>@TotalWords kata</span>
                    <span>¬∑</span>
                    <span>~@TotalMinutes menit</span>
                    <span>¬∑</span>
                    <span>@TotalPhases fase</span>
                    @if (PromptItems.Count > 0 && !IsClassifying)
                    {
                        <span>¬∑</span>
                        <span>@PromptItems.Count segments</span>
                        <span>¬∑</span>
                        <span class="px-2 py-0.5 rounded-full bg-blue-500/15 text-blue-400 text-[11px] font-semibold">üé¨ @PromptItems.Count(i => i.MediaType == BrollMediaType.BrollVideo) broll</span>
                        <span class="px-2 py-0.5 rounded-full bg-purple-500/15 text-purple-400 text-[11px] font-semibold">üé® @PromptItems.Count(i => i.MediaType == BrollMediaType.ImageGeneration) image gen</span>
                    }
                </div>
            </div>
        </div>

        @* === Redesigned Action Toolbar === *@
        <div class="space-y-4">
            @* Row 1: Navigation & Global Settings *@
            <div class="flex flex-wrap items-center justify-between gap-3 bg-muted/20 p-2 rounded-lg border border-border/50">
                <div class="flex items-center gap-2">
                    <button class="btn-secondary text-xs flex items-center gap-1.5 h-8 px-3" @onclick="OnBackToResults">
                        <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>
                        <span>Kembali</span>
                    </button>
                    <div class="h-4 w-px bg-border/80 mx-1"></div>
                    <button class="btn-ghost text-xs flex items-center gap-1.5 h-8 px-3 @(StyleSettings.VignetteEnabled ? "text-primary bg-primary/10" : "text-muted-foreground hover:bg-muted/50") transition-colors"
                            @onclick="ToggleVignette" title="Toggle vignette effect on images">
                        <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <circle cx="12" cy="12" r="10" stroke-width="2"/>
                            <circle cx="12" cy="12" r="6" stroke-width="2" class="opacity-50"/>
                        </svg>
                        <span>Vignette @(StyleSettings.VignetteEnabled ? "ON" : "OFF")</span>
                    </button>
                </div>

                <div class="flex items-center gap-2">
                    <button class="btn-ghost text-xs flex items-center gap-1.5 h-8 px-3 text-orange-500 hover:text-orange-400 hover:bg-orange-500/10 border border-transparent hover:border-orange-500/20"
                            disabled="@IsClassifying" @onclick="OnReclassify" title="Klasifikasi ulang semua segment">
                        @if (IsClassifying)
                        {
                            <svg class="animate-spin h-3.5 w-3.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>
                        }
                        else
                        {
                            <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>
                        }
                        <span class="hidden sm:inline">Re-Classify</span>
                    </button>
                    
                </div>
            </div>

            @* Row 2: Unified Grid for Generation Operations *@
            @if (!IsClassifying && PromptItems.Count > 0)
            {
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    
                    @* Column 1: Video B-Roll *@
                    @if (PromptItems.Any(i => i.MediaType == BrollMediaType.BrollVideo))
                    {
                        var brollCount = PromptItems.Count(i => i.MediaType == BrollMediaType.BrollVideo);
                        <div class="flex flex-col p-3 rounded-lg border border-border/40 bg-card hover:border-blue-500/30 transition-colors">
                            <div class="flex items-center justify-between mb-3">
                                <div class="flex items-center gap-2 text-blue-400">
                                    <div class="h-6 w-6 rounded flex items-center justify-center bg-blue-500/10">
                                        <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/></svg>
                                    </div>
                                    <span class="font-semibold text-xs tracking-wide uppercase">Video B-Roll</span>
                                </div>
                                <span class="text-[10px] font-medium bg-blue-500/10 text-blue-400 px-1.5 py-0.5 rounded">@brollCount</span>
                            </div>

                            <div class="grid grid-cols-2 gap-2 mt-auto">
                                <button class="btn-secondary text-[10px] h-8 flex justify-center items-center gap-1.5"
                                        disabled="@IsRegeneratingAllKeywords" @onclick="OnRegenAllVideoKeywords">
                                    @if (IsRegeneratingAllKeywords)
                                    {
                                        <svg class="animate-spin h-3.5 w-3.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>
                                    }
                                    else
                                    {
                                        <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>
                                    }
                                    <span>Generate Keyword</span>
                                </button>
                                <button class="btn-primary text-[10px] h-8 flex justify-center items-center gap-1.5 bg-blue-600 hover:bg-blue-500 border-blue-500"
                                        disabled="@IsSearchingBroll" @onclick="OnSearchAllVideos">
                                    @if (IsSearchingBroll)
                                    {
                                        <svg class="animate-spin h-3.5 w-3.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>
                                    }
                                    else
                                    {
                                        <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                                    }
                                    <span>Search</span>
                                </button>
                            </div>
                        </div>
                    }

                    @* Column 2: AI Gen & Video FX *@
                    @if (PromptItems.Any(i => i.MediaType == BrollMediaType.ImageGeneration))
                    {
                        var imageSegCount = PromptItems.Count(i => i.MediaType == BrollMediaType.ImageGeneration);
                        var imageNoPrompt = PromptItems.Count(i => i.MediaType == BrollMediaType.ImageGeneration && string.IsNullOrEmpty(i.Prompt));
                        var missingImageCount = PromptItems.Count(i => i.MediaType == BrollMediaType.ImageGeneration && (i.WhiskStatus != WhiskGenerationStatus.Done || string.IsNullOrEmpty(i.WhiskImagePath) || !System.IO.File.Exists(i.WhiskImagePath)));
                        var pendingVideoCount = PromptItems.Count(i => i.MediaType == BrollMediaType.ImageGeneration && i.WhiskStatus == WhiskGenerationStatus.Done && i.WhiskVideoStatus != WhiskGenerationStatus.Done);
                        var isConverting = PromptItems.Any(i => i.IsConvertingVideo);
                        var doneVideoCount = PromptItems.Count(i => i.MediaType == BrollMediaType.ImageGeneration && i.WhiskVideoStatus == WhiskGenerationStatus.Done);

                        <div class="flex flex-col p-3 rounded-lg border border-border/40 bg-card hover:border-purple-500/30 transition-colors">
                            <div class="flex items-center justify-between mb-3">
                                <div class="flex items-center gap-2 text-purple-400">
                                    <div class="h-6 w-6 rounded flex items-center justify-center bg-purple-500/10">
                                        <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
                                    </div>
                                    <span class="font-semibold text-xs tracking-wide uppercase">AI Media</span>
                                </div>
                                <div class="flex gap-1">
                                    @if(doneVideoCount > 0)
                                    {
                                        <button class="text-[10px] font-medium bg-red-500/10 hover:bg-red-500/20 text-red-400 px-1.5 py-0.5 rounded transition-colors" @onclick="OnResetAllVideoStates" title="Hapus Video B-Roll FX">Hapus FX</button>
                                    }
                                    <button class="text-[10px] font-medium bg-red-500/10 hover:bg-red-500/20 text-red-400 px-1.5 py-0.5 rounded transition-colors" @onclick="OnResetAllImageStates" title="Hard Reset AI Media">Reset</button>
                                    <span class="text-[10px] font-medium bg-purple-500/10 text-purple-400 px-1.5 py-0.5 rounded ml-1">@imageSegCount</span>
                                </div>
                            </div>

                            <div class="space-y-2 mt-auto">
                                <button class="w-full btn-primary text-[10px] h-8 flex justify-center items-center gap-1.5 bg-emerald-600 hover:bg-emerald-500 border-emerald-500"
                                        disabled="@IsGeneratingImagePrompts"
                                        @onclick="OnGenerateImagePrompts">
                                    @if (IsGeneratingImagePrompts)
                                    {
                                        <svg class="animate-spin h-3.5 w-3.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>
                                        <span>@ImagePromptGeneratedCount / @ImagePromptTotalCount</span>
                                    }
                                    else
                                    {
                                        <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
                                        <span>Generate Image Prompt</span>
                                    }
                                </button>
                                @if (IsGeneratingImagePrompts && ImagePromptTotalCount > 0)
                                {
                                    <div class="w-full bg-muted/30 rounded-full h-1 mt-0"><div class="bg-emerald-500 h-1 rounded-full transition-all" style="width: @((int)((double)ImagePromptGeneratedCount / ImagePromptTotalCount * 100))%"></div></div>
                                }

                                <div class="grid grid-cols-2 gap-2">
                                    <button class="btn-primary text-[10px] h-8 flex justify-center items-center gap-1.5 bg-purple-600 hover:bg-purple-500 border-purple-500"
                                            disabled="@(IsGeneratingWhisk || missingImageCount == 0)" @onclick="OnGenerateAllWhiskImages">
                                        @if (IsGeneratingWhisk)
                                        {
                                            <svg class="animate-spin h-3.5 w-3.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>
                                            <span>@WhiskGeneratedCount / @WhiskTotalCount</span>
                                        }
                                        else
                                        {
                                            <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/></svg>
                                            <span>@(missingImageCount > 0 ? $"Gen {missingImageCount} Img" : "Images Done")</span>
                                        }
                                    </button>
                                    <button class="btn-secondary text-[10px] h-8 flex justify-center items-center gap-1.5 border-purple-500/30 hover:border-purple-500/50 hover:bg-purple-500/10"
                                            disabled="@(isConverting || pendingVideoCount == 0)" @onclick="OnGenerateAllKenBurnsVideos">
                                        @if (isConverting)
                                        {
                                            <svg class="animate-spin h-3.5 w-3.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>
                                            <span>Conv...</span>
                                        }
                                        else
                                        {
                                            <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                                            <span>@(pendingVideoCount > 0 ? $"Add FX ({pendingVideoCount})" : "FX Done")</span>
                                        }
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>


        @* === Progress Bar (for Whisk batch) === *@
        @if (IsGeneratingWhisk && WhiskTotalCount > 0)
        {
            <div class="mt-3 max-w-sm">
                <div class="w-full bg-muted/30 rounded-full h-1.5">
                    <div class="bg-purple-500 h-1.5 rounded-full transition-all duration-300" 
                         style="width: @(WhiskTotalCount > 0 ? (int)((double)WhiskGeneratedCount / WhiskTotalCount * 100) : 0)%"></div>
                </div>
            </div>
        }
    </div>

    @if (IsClassifying)
    {
        <div class="card p-8 text-center">
            <div class="flex items-center justify-center gap-3 mb-4">
                <svg class="animate-spin h-6 w-6 text-primary" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <p class="text-lg font-medium text-foreground">Mengklasifikasi segments...</p>
            </div>
            <p class="text-sm text-muted-foreground mb-5">LLM sedang menentukan B-Roll vs Image Generation untuk setiap segment</p>

            @if (ClassifyTotalSegments > 0)
            {
                var pct = ClassifyTotalSegments > 0 ? (int)((double)ClassifyCompletedSegments / ClassifyTotalSegments * 100) : 0;
                <div class="max-w-md mx-auto">
                    <div class="flex justify-between text-xs text-muted-foreground mb-1.5">
                        <span>@ClassifyCompletedSegments / @ClassifyTotalSegments segments</span>
                        <span>@pct%</span>
                    </div>
                    <div class="w-full h-2.5 rounded-full bg-muted overflow-hidden">
                        <div class="h-full rounded-full bg-primary transition-all duration-300 ease-out"
                             style="width: @(pct)%"></div>
                    </div>
                </div>
            }
        </div>
    }
    else if (!string.IsNullOrEmpty(ClassifyError))
    {
        <div class="rounded-lg border border-destructive/30 bg-destructive/10 p-3 text-destructive text-sm">@ClassifyError</div>
    }
    else if (PromptItems.Count == 0)
    {
        @* Config Panel ‚Äî configure before generating *@
        <div class="card p-6 space-y-5">
            <div class="flex items-center gap-3 mb-2">
                <div class="h-10 w-10 rounded-lg bg-gradient-to-br from-purple-500/20 to-blue-500/20 flex items-center justify-center">
                    <svg class="h-5 w-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/></svg>
                </div>
                <div>
                    <h3 class="text-lg font-semibold">Konfigurasi Image Prompt</h3>
                    <p class="text-xs text-muted-foreground">Kontrol penuh art style, lighting, warna, komposisi, dan era sebelum generate</p>
                </div>
            </div>

            @* === 1. Art Style Selector === *@
            <div class="space-y-2">
                <label class="text-sm font-medium text-foreground flex items-center gap-2">
                    <svg class="h-4 w-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/></svg>
                    üé® Art Style
                </label>
                <p class="text-xs text-muted-foreground -mt-1">Tentukan gaya visual utama untuk semua image yang di-generate.</p>
                <div class="flex flex-wrap gap-2">
                    @foreach (var opt in _artStyleOptions)
                    {
                        var isSelected = PromptConfig.ArtStyle == opt.Value;
                        <button class="@(isSelected ? "bg-purple-600 text-white border-purple-500 shadow-lg shadow-purple-500/20" : "bg-muted/30 text-muted-foreground border-border hover:bg-muted/50 hover:text-foreground") text-xs px-3 py-1.5 rounded-full border transition-all duration-200 font-medium"
                                @onclick="() => { PromptConfig.ArtStyle = opt.Value; }">
                            @opt.Label
                        </button>
                    }
                </div>
                @if (PromptConfig.ArtStyle == ImageArtStyle.Custom)
                {
                    <input type="text" class="w-full bg-muted/20 border border-border rounded-lg px-3 py-2 text-sm text-foreground placeholder-muted-foreground/50 focus:border-purple-500/50 focus:outline-none focus:ring-1 focus:ring-purple-500/30 mt-1"
                           placeholder="Describe your custom art style..."
                           @bind="PromptConfig.CustomArtStyle"
                           @bind:event="oninput" />
                }
            </div>

            @* === 2. Lighting Selector === *@
            <div class="space-y-2">
                <label class="text-sm font-medium text-foreground flex items-center gap-2">
                    <svg class="h-4 w-4 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/></svg>
                    üí° Lighting
                </label>
                <p class="text-xs text-muted-foreground -mt-1">Pilih mood pencahayaan untuk suasana visual.</p>
                <div class="flex flex-wrap gap-2">
                    @foreach (var opt in _lightingOptions)
                    {
                        var isSelected = PromptConfig.Lighting == opt.Value;
                        <button class="@(isSelected ? "bg-yellow-600 text-white border-yellow-500 shadow-lg shadow-yellow-500/20" : "bg-muted/30 text-muted-foreground border-border hover:bg-muted/50 hover:text-foreground") text-xs px-3 py-1.5 rounded-full border transition-all duration-200 font-medium"
                                @onclick="() => { PromptConfig.Lighting = opt.Value; }">
                            @opt.Label
                        </button>
                    }
                </div>
            </div>

            @* === 3. Color Palette Selector === *@
            <div class="space-y-2">
                <label class="text-sm font-medium text-foreground flex items-center gap-2">
                    <svg class="h-4 w-4 text-pink-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/></svg>
                    üé® Color Palette
                </label>
                <p class="text-xs text-muted-foreground -mt-1">Tentukan mood warna keseluruhan.</p>
                <div class="flex flex-wrap gap-2">
                    @foreach (var opt in _colorPaletteOptions)
                    {
                        var isSelected = PromptConfig.ColorPalette == opt.Value;
                        <button class="@(isSelected ? "bg-pink-600 text-white border-pink-500 shadow-lg shadow-pink-500/20" : "bg-muted/30 text-muted-foreground border-border hover:bg-muted/50 hover:text-foreground") text-xs px-3 py-1.5 rounded-full border transition-all duration-200 font-medium"
                                @onclick="() => { PromptConfig.ColorPalette = opt.Value; }">
                            @opt.Label
                        </button>
                    }
                </div>
            </div>

            @* === 4. Composition Selector === *@
            <div class="space-y-2">
                <label class="text-sm font-medium text-foreground flex items-center gap-2">
