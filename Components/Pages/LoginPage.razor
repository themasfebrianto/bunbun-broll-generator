@page "/login"
@layout BunbunBroll.Components.Layout.EmptyLayout
@rendermode InteractiveServer
@inject CustomAuthStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject Microsoft.Extensions.Options.IOptions<AuthSettings> AuthOptions

<div class="min-h-screen flex items-center justify-center bg-background px-4 relative">
    <!-- Theme Toggle in corner -->
    <div class="absolute top-4 right-4">
        <ThemeToggle />
    </div>
    
    <div class="w-full max-w-[380px] space-y-8 animate-in">
        <div class="text-center space-y-3">
            <div class="flex justify-center mb-6">
                <div class="h-12 w-12 rounded-lg bg-foreground flex items-center justify-center text-background">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/>
                        <polyline points="14 2 14 8 20 8"/>
                    </svg>
                </div>
            </div>
            <h1 class="text-2xl font-bold tracking-tight">Welcome back</h1>
            <p class="text-muted-foreground text-sm">Sign in to access your dashboard</p>
        </div>

        <div class="card p-6 space-y-5">
            <EditForm Model="@_loginModel" OnValidSubmit="HandleLogin" FormName="loginForm">
                <div class="space-y-4">
                    <div class="space-y-2">
                        <label class="text-sm font-medium">Email</label>
                        <InputText @bind-Value="_loginModel.Email" 
                               class="input"
                               placeholder="name@example.com" />
                    </div>
                    <div class="space-y-2">
                        <label class="text-sm font-medium">Password</label>
                        <InputText type="password" @bind-Value="_loginModel.Password"
                               class="input"
                               placeholder="••••••••" />
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(_error))
                {
                    <div class="text-sm font-medium text-destructive bg-destructive/10 p-3 rounded-lg border border-destructive/20 text-center">
                        @_error
                    </div>
                }

                <div class="pt-2">
                    <button type="submit" class="btn-primary h-10 w-full">
                        Sign In
                    </button>
                </div>
            </EditForm>
        </div>
        
        <p class="text-center text-xs text-muted-foreground">
            &copy; 2026 Bunbun Intelligence
        </p>
    </div>
</div>

@code {
    private LoginModel _loginModel = new();
    private string? _error;

    private void HandleLogin()
    {
        var auth = AuthOptions.Value;
        if (_loginModel.Email.Equals(auth.Email, StringComparison.OrdinalIgnoreCase) 
            && _loginModel.Password == auth.Password)
        {
            _error = null;
            AuthStateProvider.AuthenticateUser(_loginModel.Email);
            Navigation.NavigateTo("/");
        }
        else
        {
            _error = "Invalid email or password. Please try again.";
        }
    }

    public class LoginModel
    {
        public string Email { get; set; } = "";
        public string Password { get; set; } = "";
    }
}
