        }
        catch (Exception ex)
        {
            item.FilterError = $"Filter failed: {ex.Message}";
            Console.Error.WriteLine($"Filter error: {ex}");
        }
        finally
        {
            item.IsFilteringVideo = false;
            StateHasChanged();
        }
