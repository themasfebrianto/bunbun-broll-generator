@page "/projects"
@rendermode InteractiveServer
@inject IProjectService ProjectService
@inject NavigationManager Navigation
@using BunbunBroll.Data

<PageTitle>Saved Projects</PageTitle>

<div class="animate-in max-w-5xl mx-auto py-12 px-4">
    <div class="flex items-center justify-between mb-10">
        <div class="space-y-1">
            <h1 class="text-3xl font-bold tracking-tight">Projects</h1>
            <p class="text-muted-foreground">Manage and edit your saved B-roll sequences.</p>
        </div>
        <a href="/" class="btn-primary">
            <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path d="M12 5v14M5 12h14"/>
            </svg>
            New Project
        </a>
    </div>

    @if (_projects == null)
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            @for (int i = 0; i < 6; i++)
            {
                <div class="h-[160px] rounded-lg border border-border bg-muted skeleton"></div>
            }
        </div>
    }
    else if (!_projects.Any())
    {
        <div class="flex flex-col items-center justify-center py-24 border border-dashed border-border rounded-lg">
            <div class="h-12 w-12 rounded-full bg-muted flex items-center justify-center mb-6">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground">
                    <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path>
                    <polyline points="14 2 14 8 20 8"></polyline>
                </svg>
            </div>
            <h3 class="text-lg font-semibold mb-2">No projects yet</h3>
            <p class="text-muted-foreground mb-6 text-center max-w-xs text-sm">Create your first B-roll sequence and it will appear here.</p>
            <a href="/" class="btn-secondary">
                Get started
                <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
            </a>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            @foreach (var project in _projects)
            {
                <div class="card card-hover p-5 group">
                    <div class="flex items-center justify-between mb-3">
                        <span class="badge badge-mono">#@project.Id</span>
                        <span class="text-xs text-muted-foreground font-mono">@project.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd")</span>
                    </div>
                    <h3 class="font-semibold text-base mb-2 truncate">@project.Name</h3>
                    <p class="text-sm text-muted-foreground line-clamp-2 mb-5 min-h-[40px]">@project.RawScript</p>
                    
                    <div class="flex items-center gap-2">
                        <button @onclick="() => LoadProject(project.Id)" class="btn-secondary h-9 px-4 flex-1 text-xs">
                            Open
                        </button>
                        <button @onclick="() => ConfirmDelete(project)" class="btn-ghost h-9 w-9 p-0 text-muted-foreground hover:text-destructive hover:bg-destructive/10">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M3 6h18"></path>
                                <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"></path>
                                <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"></path>
                            </svg>
                        </button>
                    </div>
                </div>
            }
        </div>
    }
</div>

@* Delete Confirmation Modal *@
@if (_showDeleteModal && _projectToDelete != null)
{
    <div class="modal-backdrop animate-in" @onclick="CancelDelete"></div>
    <div class="modal modal-enter">
        <div class="space-y-4">
            <div class="space-y-2">
                <h2 class="text-lg font-semibold">Delete Project</h2>
                <p class="text-sm text-muted-foreground">
                    Are you sure you want to delete <span class="font-medium text-foreground">"@_projectToDelete.Name"</span>? This action cannot be undone.
                </p>
            </div>
            <div class="flex justify-end gap-2 pt-2">
                <button @onclick="CancelDelete" class="btn-secondary h-9">
                    Cancel
                </button>
                <button @onclick="ExecuteDelete" class="btn-destructive h-9">
                    Delete
                </button>
            </div>
        </div>
    </div>
}

@code {
    private List<Project>? _projects;
    private bool _showDeleteModal = false;
    private Project? _projectToDelete;

    protected override async Task OnInitializedAsync()
    {
        _projects = await ProjectService.GetProjectsAsync();
    }

    private void LoadProject(string id)
    {
        Navigation.NavigateTo($"/editor/{id}");
    }

    private void ConfirmDelete(Project project)
    {
        _projectToDelete = project;
        _showDeleteModal = true;
    }

    private void CancelDelete()
    {
        _showDeleteModal = false;
        _projectToDelete = null;
    }

    private async Task ExecuteDelete()
    {
        if (_projectToDelete != null)
        {
            await ProjectService.DeleteProjectAsync(_projectToDelete.Id);
            _projects = await ProjectService.GetProjectsAsync();
        }
        _showDeleteModal = false;
        _projectToDelete = null;
    }
}
