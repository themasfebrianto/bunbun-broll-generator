@page "/"
@rendermode InteractiveServer
@inject IPipelineOrchestrator Orchestrator
@inject ILogger<Home> Logger
@implements IDisposable

<PageTitle>BunBun B-Roll Generator</PageTitle>

<div class="home-container">
    <!-- Hero Section -->
    <section class="hero-section animate-fadeIn">
        <h1 class="hero-title">
            <span class="gradient-text">AI-Powered</span> B-Roll Generator
        </h1>
        <p class="hero-subtitle">
            Transform your video scripts into perfectly matched stock footage.
            Powered by Local Gemini AI & Pexels.
        </p>
    </section>

    @if (_currentJob == null)
    {
        <!-- Input Form -->
        <section class="input-section card animate-fadeIn">
            <h2 class="section-title">📝 Enter Your Script</h2>
            
            <div class="form-group">
                <label class="form-label" for="projectName">Project Name</label>
                <input type="text" 
                       id="projectName" 
                       class="form-input" 
                       @bind="_projectName" 
                       placeholder="e.g., Yaumi_Feature_Intro" />
            </div>
            
            <div class="form-group">
                <label class="form-label" for="script">Video Script</label>
                <textarea id="script" 
                          class="form-textarea" 
                          @bind="_scriptText" 
                          placeholder="Paste your video script here...

Each line or sentence will become a segment.
The AI will extract keywords and find matching B-Roll footage.

Example:
Wanita sedang sholat malam di kamar yang tenang.
Matahari terbit di atas kota yang sibuk.
Seorang programmer coding di depan laptop."></textarea>
            </div>
            
            <div class="form-group">
                <label class="form-label" for="mood">Visual Mood (Optional)</label>
                <select id="mood" class="form-input" @bind="_selectedMood">
                    <option value="">Auto-detect</option>
                    <option value="Cinematic">Cinematic</option>
                    <option value="Moody">Moody / Dark</option>
                    <option value="Bright">Bright / Uplifting</option>
                    <option value="Professional">Professional / Corporate</option>
                    <option value="Natural">Natural / Documentary</option>
                </select>
            </div>
            
            <button class="btn btn-primary btn-generate" 
                    @onclick="StartGeneration" 
                    disabled="@(!CanGenerate)">
                @if (_isGenerating)
                {
                    <span class="spinner"></span>
                    <span>Processing...</span>
                }
                else
                {
                    <span>🚀 Generate B-Roll</span>
                }
            </button>
            
            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="error-message animate-fadeIn">
                    ⚠️ @_errorMessage
                </div>
            }
        </section>
    }
    else
    {
        <!-- Processing View -->
        <section class="processing-section animate-fadeIn">
            <!-- Job Header -->
            <div class="job-header card">
                <div class="job-info">
                    <h2>@_currentJob.ProjectName</h2>
                    <div class="job-meta">
                        <span class="badge @GetJobStatusClass(_currentJob.Status)">@_currentJob.Status</span>
                        <span class="job-stat">@_currentJob.CompletedSegments / @_currentJob.TotalSegments segments</span>
                    </div>
                </div>
                
                <div class="progress-section">
                    <div class="progress-container">
                        <div class="progress-bar" style="width: @_currentJob.ProgressPercentage%"></div>
                    </div>
                    <span class="progress-text">@_currentJob.ProgressPercentage.ToString("F0")%</span>
                </div>
                
                @if (_currentJob.Status != JobStatus.Processing && _currentJob.Status != JobStatus.Segmenting)
                {
                    <button class="btn btn-secondary" @onclick="ResetJob">
                        ↻ New Job
                    </button>
                }
            </div>
            
            <!-- Status Log -->
            @if (!string.IsNullOrEmpty(_statusMessage))
            {
                <div class="status-log card-glass">
                    <span class="status-icon">💬</span>
                    <span>@_statusMessage</span>
                </div>
            }
            
            <!-- Segments List -->
            <div class="segments-section">
                <h3 class="section-subtitle">Segments</h3>
                <div class="segment-list">
                    @foreach (var segment in _currentJob.Segments)
                    {
                        <div class="segment-item animate-slideIn" style="animation-delay: @(segment.Id * 50)ms">
                            <div class="segment-number">@segment.Id</div>
                            
                            <div class="segment-content">
                                <p class="segment-text" title="@segment.OriginalText">
                                    @TruncateText(segment.OriginalText, 100)
                                </p>
                                
                                @if (segment.Keywords.Count > 0)
                                {
                                    <div class="segment-keywords">
                                        @foreach (var keyword in segment.Keywords.Take(4))
                                        {
                                            <span class="keyword-tag">@keyword</span>
                                        }
                                    </div>
                                }
                                
                                @if (segment.SelectedAsset != null && segment.SelectedAsset.IsDownloaded)
                                {
                                    <div class="segment-file">
                                        📁 @Path.GetFileName(segment.SelectedAsset.LocalPath)
                                    </div>
                                }
                                
                                @if (!string.IsNullOrEmpty(segment.ErrorMessage))
                                {
                                    <div class="segment-error">
                                        ⚠️ @segment.ErrorMessage
                                    </div>
                                }
                            </div>
                            
                            <div class="segment-status">
                                <span class="badge @GetSegmentStatusClass(segment.Status)">
                                    @GetSegmentStatusIcon(segment.Status) @segment.Status
                                </span>
                            </div>
                        </div>
                    }
                </div>
            </div>
            
            <!-- Video Previews -->
            @if (_currentJob.Segments.Any(s => s.SelectedAsset?.ThumbnailUrl != null))
            {
                <div class="previews-section">
                    <h3 class="section-subtitle">Video Previews</h3>
                    <div class="previews-grid">
                        @foreach (var segment in _currentJob.Segments.Where(s => s.SelectedAsset?.ThumbnailUrl != null))
                        {
                            <div class="video-preview card">
                                <img src="@segment.SelectedAsset!.ThumbnailUrl" alt="Preview for segment @segment.Id" />
                                <div class="video-preview-overlay">
                                    <span class="preview-label">Segment @segment.Id • @segment.SelectedAsset.DurationSeconds s</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </section>
    }
</div>

