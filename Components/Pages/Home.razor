            _statusMessage = $"Error: {ex.Message}";
            _generateStopwatch?.Stop();
            _elapsedTimer?.Dispose();
            _elapsedTimer = null;
        }
        finally
        {
            _isGeneratingShortVideo = false;
            StateHasChanged();
        }
    }

